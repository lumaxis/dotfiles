[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[core]
	editor = code --wait
	autocrlf = input
	trustctime = false

[init]
	defaultBranch = main
	templatedir = ~/.config/git/template

[grep]
	lineNumber = true

[include]
	path = ./ssh-signing/config

# Use GitHub Codespaces config to override especially signing settings to make automagic GPG signing work
[includeIf "gitdir:/workspaces/"]
	path = /etc/gitconfig

# Include Codespaces-specific config
[includeIf "gitdir:/workspaces/"]
	path = ./codespaces/config

[fetch]
	prune = true

[rerere]
	enabled = true

[tag]
	forceSignAnnotated = true

[pack]
	useSparse = true

[diff]
	indentHeuristic = true
	compactionHeuristic = true
	tool = Kaleidoscope

[difftool]
	prompt = false

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = Kaleidoscope

[rebase]
	autoStash = true

[mergetool]
	prompt = false

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[push]
	autoSetupRemote = true

[pull]
	rebase = true
